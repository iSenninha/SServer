<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.senninha.equipment.db.dao.TestDao">
    <resultMap type="cn.senninha.equipment.db.entity.Test" id="testMap">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="name" property="name" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="selectAll" resultMap="testMap">
        select * from test
    </select>

    <select id = "selectOne" resultMap = "testMap" parameterType="int">
        select * from test where id = #{id, jdbcType = INTEGER}
    </select>

    <update id = "update" parameterType="cn.senninha.equipment.db.entity.Test">
        update test set name = #{name, jdbcType = VARCHAR}
        where id = #{id, jdbcType = INTEGER}
    </update>

    <delete id = "delete">
        delete from test where id = #{id, jdbcType = INTEGER}
    </delete>

    <insert id="insert" parameterType="cn.senninha.equipment.db.entity.Test">
        insert INTO test (name) VALUES (#{name, jdbcType=VARCHAR})
    </insert>


</mapper>